    //- contacts

    +section({class: 'contacts', is_container_class: true})

      h2.section__title.section__title-uppercase.section__title-underlined.contacts__title Контакты

      ul.clearfix.contacts__list
        each item in contacts
          li.clearfix.contacts__item
            i(class="icon icon-" + item.icon + " contacts__icon")
            span(class="contacts__item_title")= item.icon
            a.contacts__link(href=item.link target="_blank")= item.text
